# Exemple de configuration pour Log-Interactif-treso

# Emplacement du fichier SQLite (ex : ./data/ma_base.db)
DB_PATH=./data/database.db

# Clé secrète pour la session (si Flask/Django ou autre)
SECRET_KEY=change-me-please

# Paramètres SMTP pour envoi de mails (si utilisé)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASS=your_password

# Paramètre pour mode DEBUG (True/False)
DEBUG=True

# API externes éventuelles (exemple)
#API_URL=https://api.monsite.com
#API_KEY=your_api_key